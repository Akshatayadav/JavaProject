package in.yh.dao;

import java.sql.Connection;
import java.sql.PreparedStatement;
import java.sql.ResultSet;
import java.sql.SQLException;

import in.yh.pojo.Appointment;
import in.yh.utility.DBConnection;

public class AppointmentDao {
	Connection conn=DBConnection.getConnect();
	ResultSet  rs=null;
	String sql;
	PreparedStatement ps=null;
	int i=0;
	
	public boolean addAppointment(Appointment a)  {
		try {
		System.out.println("inside add appointment");
		sql="insert into appointment(userid,name,gender,age,appointmentdate,email,contact,disease,doctorid,address,status) values(?,?,?,?,?,?,?,?,?,?,?)";
		PreparedStatement ps = conn.prepareStatement(sql);
		ps.setInt(1, a.getUserid());
		ps.setString(2, a.getName());
		ps.setString(3, a.getGender());
		ps.setInt(4, a.getAge());
		ps.setString(5, a.getAppointmentdate());
		ps.setString(6, a.getEmail());
		ps.setString(7, a.getContact());
		ps.setString(8, a.getDisease());
		ps.setInt(9, a.getDoctorid());
		ps.setString(10, a.getAddress());
		ps.setString(11, a.getStatus());
		System.out.println("Query"+ps);
		i=ps.executeUpdate();
		
		if(i>0)
			return true;
		}
		catch(SQLException e) {
			e.printStackTrace();
		}
		return false;
	}
	
}
