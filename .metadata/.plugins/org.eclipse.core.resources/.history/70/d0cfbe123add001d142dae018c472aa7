package in.yh.controllers;

import java.io.IOException;
import java.sql.Connection;

import javax.servlet.ServletException;
import javax.servlet.annotation.WebServlet;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;
import javax.servlet.http.HttpSession;

import in.yh.dao.SpecialistDao;
import in.yh.utility.DBConnection;

/**
 * Servlet implementation class AddSpecialist
 */
@WebServlet("/addSpecialist")
public class AddSpecialist extends HttpServlet {
	Connection conn=DBConnection.getConnect();
	HttpSession session=null;
	protected void doGet(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
		// TODO Auto-generated method stub
		response.getWriter().append("Served at: ").append(request.getContextPath());
	}

	
	protected void doPost(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
		String specname= request.getParameter("specName");
		SpecialistDao sdao=new SpecialistDao();
		System.out.println(specname);
		boolean result= sdao.addSpecialist(specname);
		System.out.println(result);
		session= request.getSession();
		if(result) {
			session.setAttribute("msg","Specialist Added" );
			response.sendRedirect("/YouHeal/admin/index.jsp");
		}
		else {
			session.setAttribute("errmsg","Something went wrong!!" );
			response.sendRedirect("/YouHeal/admin/index.jsp");
		}
	}

}
