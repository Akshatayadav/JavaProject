package in.yh.controllers;

import java.io.IOException;

import javax.servlet.ServletException;
import javax.servlet.annotation.WebServlet;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;
import javax.servlet.http.HttpSession;

import in.yh.dao.AppointmentDao;
import in.yh.pojo.Appointment;

/**
 * Servlet implementation class Appointment
 */
@WebServlet("/UserAppointment")
public class AppointmentServlet extends HttpServlet {
	 HttpSession session=null;
	protected void doGet(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
		// TODO Auto-generated method stub
		response.getWriter().append("Served at: ").append(request.getContextPath());
	}

	
	protected void doPost(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
		int userid=Integer.parseInt(request.getParameter("userid"));
		String name=request.getParameter("name");
		String gender=request.getParameter("gender");
		int age=Integer.parseInt(request.getParameter("age"));
		String appointmentdate=request.getParameter("gender");
		String email=request.getParameter("gender");
		String contact=request.getParameter("gender");
		String disease=request.getParameter("gender");
		int doctorid=Integer.parseInt(request.getParameter("doctorid"));
		String address=request.getParameter("gender");
		Appointment a=new Appointment(userid, name, gender, age, appointmentdate, email, contact, disease, doctorid, address, "pending");
		
		AppointmentDao adao=new AppointmentDao();
		session=request.getSession();
		if(adao.addAppointment(a)) {
			session.setAttribute("msg", "Appointment Sucessfull");
			response.sendRedirect("userappointment.jsp");
			
		}
		else {
			session.setAttribute("errmsg", "Appointment not Sucessfull");
			response.sendRedirect("userappointment.jsp");
		}
	}
	

}
