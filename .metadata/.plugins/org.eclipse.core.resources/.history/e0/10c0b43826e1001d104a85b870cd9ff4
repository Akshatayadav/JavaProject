package in.yh.dao;

import java.sql.Connection;
import java.sql.PreparedStatement;
import java.sql.ResultSet;
import java.sql.SQLException;

import in.yh.utility.DBConnection;

public class LoginDao {
	Connection conn=DBConnection.getConnect();
	ResultSet  rs=null;
	String sql;
	PreparedStatement ps=null;
	int i=0;
	public boolean isAdmin(String email,String password) {
		try {
			sql="select email,password from admin where email=? and password=?";
			ps=conn.prepareStatement(sql);
			ps.setString(1, email);
			ps.setString(2, password);
			System.out.println("Query"+ps);
			rs=ps.executeQuery();
			if(rs.next()) {
				System.out.println("true");
				return true;
			}
			
		}
		catch(SQLException e) {
			System.out.println(e);
		}
		return false;
	}
	
	public boolean isUser(String name,String email,String password) {
		try {
			sql="select name,email,password from user where email=? and password=?";
			ps=conn.prepareStatement(sql);
			ps.setString(1,name);
			ps.setString(2, email);
			ps.setString(3, password);
			System.out.println("Query"+ps);
			rs=ps.executeQuery();
			if(rs.next()) {
				return true;
			}
			
		}
		catch(SQLException e) {
			System.out.println(e);
		}
		return false;
	}
	
	public boolean isDoctor(String email,String password) {
		try {
			sql="select email,password from doctor where email=? and password=?";
			ps=conn.prepareStatement(sql);
			ps.setString(1, email);
			ps.setString(2, password);
			System.out.println("Query"+ps);
			rs=ps.executeQuery();
			if(rs.next()) {
				return true;
			}
			
		}
		catch(SQLException e) {
			System.out.println(e);
		}
		return false;
	}
}
